<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.io7m.bundles</groupId>
    <artifactId>org.lwjgl.parent</artifactId>
    <version>3.1.0</version>
  </parent>

  <packaging>bundle</packaging>
  <artifactId>org.lwjgl.glfw</artifactId>
  <name>org.lwjgl.glfw</name>
  <description>LWJGL OSGi bundle (GLFW)</description>
  <url>http://github.com/io7m/org.lwjgl</url>

  <dependencies>
    <dependency>
      <groupId>org.lwjgl</groupId>
      <artifactId>lwjgl-glfw</artifactId>
    </dependency>
    <dependency>
      <groupId>org.lwjgl</groupId>
      <artifactId>lwjgl-glfw</artifactId>
      <classifier>natives-linux</classifier>
    </dependency>
    <dependency>
      <groupId>org.lwjgl</groupId>
      <artifactId>lwjgl-glfw</artifactId>
      <classifier>natives-macos</classifier>
    </dependency>
    <dependency>
      <groupId>org.lwjgl</groupId>
      <artifactId>lwjgl-glfw</artifactId>
      <classifier>natives-windows</classifier>
    </dependency>
  </dependencies>

  <build>
    <plugins>

      <!-- Unpack LWJGL natives -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-natives-linux</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <overWriteReleases>true</overWriteReleases>
              <includeGroupIds>org.lwjgl</includeGroupIds>
              <includeArtifactIds>lwjgl-glfw</includeArtifactIds>
              <includeClassifiers>natives-linux</includeClassifiers>
              <includeTypes>jar</includeTypes>
              <includes>**\/*.so</includes>
              <outputDirectory>${project.build.directory}/unpacked/natives/linux/x86_64</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>unpack-natives-windows-x86</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <overWriteReleases>true</overWriteReleases>
              <includeGroupIds>org.lwjgl</includeGroupIds>
              <includeArtifactIds>lwjgl-glfw</includeArtifactIds>
              <includeClassifiers>natives-windows</includeClassifiers>
              <includeTypes>jar</includeTypes>
              <includes>
                glfw32.dll
              </includes>
              <outputDirectory>${project.build.directory}/unpacked/natives/windows/x86</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>unpack-natives-windows-x86_64</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <overWriteReleases>true</overWriteReleases>
              <includeGroupIds>org.lwjgl</includeGroupIds>
              <includeArtifactIds>lwjgl-glfw</includeArtifactIds>
              <includeClassifiers>natives-windows</includeClassifiers>
              <includeTypes>jar</includeTypes>
              <includes>
                glfw.dll
              </includes>
              <outputDirectory>${project.build.directory}/unpacked/natives/windows/x86_64</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>unpack-natives-macos-x86_64</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <overWriteReleases>true</overWriteReleases>
              <includeGroupIds>org.lwjgl</includeGroupIds>
              <includeArtifactIds>lwjgl-glfw</includeArtifactIds>
              <includeClassifiers>natives-macos</includeClassifiers>
              <includeTypes>jar</includeTypes>
              <includes>**\/*.dylib</includes>
              <outputDirectory>${project.build.directory}/unpacked/natives/osx/x86_64</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Produce OSGi bundle -->
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <executions>
          <execution>
            <id>default-bundle</id>
            <configuration>
              <instructions>
                <Import-Package>
                  <!-- LWJGL states that sun.misc.Unsafe is optional but recommended -->
                  sun.misc; resolution:="optional",
                  org.lwjgl,
                  org.lwjgl.system,
                  org.lwjgl.system.dyncall,
                  org.lwjgl.system.libc,
                  org.lwjgl.system.linux,
                  org.lwjgl.system.macosx,
                  org.lwjgl.system.windows,
                </Import-Package>

                <Embed-Dependency>
                  artifactId=lwjgl-glfw;inline=**/*.class
                </Embed-Dependency>

                <Export-Package>
                  org.lwjgl.glfw
                </Export-Package>

                <Include-Resource>
                  ${project.build.directory}/unpacked/
                </Include-Resource>

                <Bundle-NativeCode>
                  natives/windows/x86/glfw32.dll;
                  osname=Windows; processor=x86,

                  natives/windows/x86_64/glfw.dll;
                  osname=Windows; processor=x86-64,

                  natives/linux/x86_64/libglfw.so;
                  osname=Linux; processor=x86-64,

                  natives/osx/x86_64/libglfw.dylib;
                  osname=MacOSX; processor=x86-64
                </Bundle-NativeCode>

                <Specification-Title>Lightweight Java Game Library</Specification-Title>
                <Specification-Version>${project.version}</Specification-Version>
                <Specification-Vendor>lwjgl.org</Specification-Vendor>
                <Implementation-Title>lwjgl</Implementation-Title>
                <Implementation-Version>${project.version}</Implementation-Version>
                <Implementation-Vendor>lwjgl.org</Implementation-Vendor>
                <Implementation-Vendor-Id>${project.groupId}</Implementation-Vendor-Id>

                <Sealed>true</Sealed>
              </instructions>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
